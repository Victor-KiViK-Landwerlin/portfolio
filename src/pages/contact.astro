---
import Layout from '../layouts/Layout.astro';

const socialLinks = [
  { name: "Instagram", username: "lien_compte", icon: "instagram", url: "#" },
  { name: "LinkedIn", username: "lien_compte", icon: "linkedin", url: "#" },
  { name: "Behance", username: "lien_compte", icon: "behance", url: "#" },
  { name: "X", username: "lien_compte", icon: "x", url: "#" },
];
---

<Layout title="Contact" currentPath="/contact">
  <!-- Titre de la page -->
  <section class="py-20 px-6">
    <div class="container mx-auto max-w-6xl">
      <h1 class="text-8xl font-bold text-kivik-green text-center mb-20">
        Contact
      </h1>
    </div>
  </section>

  <!-- R√©seaux sociaux -->
  <section class="py-12 px-6">
    <div class="container mx-auto max-w-2xl">
      <h2 class="text-4xl font-bold text-kivik-green mb-12 text-center">Suivez moi</h2>
      
      <div class="space-y-6">
        {socialLinks.map((social) => (
          <a 
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center gap-6 p-6 bg-white border-2 border-kivik-green hover:bg-kivik-light/30 transition-colors group"
          >
            <div class="w-16 h-16 bg-kivik-green rounded-lg flex items-center justify-center group-hover:scale-110 transition-transform">
              <span class="text-white text-2xl font-bold">
                {social.icon === "instagram" && "üì∑"}
                {social.icon === "linkedin" && "in"}
                {social.icon === "behance" && "Bƒì"}
                {social.icon === "x" && "ùïè"}
              </span>
            </div>
            <span class="text-2xl font-medium text-kivik-green">{social.username}</span>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- S√©parateur OU -->
  <div class="py-12 px-6">
    <div class="container mx-auto max-w-2xl">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t-2 border-kivik-green/30"></div>
        </div>
        <div class="relative flex justify-center">
          <span class="bg-kivik-cream px-6 text-2xl font-bold text-kivik-green">OU</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Formulaire de contact -->
  <section class="py-12 px-6 pb-20">
    <div class="container mx-auto max-w-2xl">
      <h2 class="text-4xl font-bold text-kivik-green mb-12 text-center">Contactez moi directement</h2>
      
      <div class="bg-white border-4 border-kivik-green p-8">
        <form class="space-y-6">
          <!-- Nom -->
          <div>
            <label for="nom" class="block text-sm font-medium text-kivik-green mb-2">
              Nom
            </label>
            <input 
              type="text" 
              id="nom" 
              name="nom"
              class="w-full px-4 py-3 border-2 border-kivik-green/30 rounded-full focus:border-kivik-green focus:outline-none bg-kivik-cream"
              required
            />
          </div>

          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-kivik-green mb-2">
              Email
            </label>
            <input 
              type="email" 
              id="email" 
              name="email"
              class="w-full px-4 py-3 border-2 border-kivik-green/30 rounded-full focus:border-kivik-green focus:outline-none bg-kivik-cream"
              required
            />
          </div>

          <!-- Message -->
          <div>
            <label for="message" class="block text-sm font-medium text-kivik-green mb-2">
              Message
            </label>
            <textarea 
              id="message" 
              name="message"
              rows="6"
              class="w-full px-4 py-3 border-2 border-kivik-green/30 rounded-2xl focus:border-kivik-green focus:outline-none bg-kivik-cream resize-none"
              required
            ></textarea>
          </div>

          <!-- Bouton submit -->
          <div class="flex justify-end">
            <button 
              type="submit"
              class="px-8 py-3 bg-white border-2 border-kivik-green text-kivik-green font-medium hover:bg-kivik-green hover:text-white transition-colors"
            >
              envoyer
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>
</Layout>
