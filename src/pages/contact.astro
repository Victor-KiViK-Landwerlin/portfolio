---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import Logo from '../components/Logo.astro';

const socialLinks = [
  { 
    name: "Instagram", 
    username: "@votre_compte", 
    icon: "instagram", 
    url: "https://instagram.com/votre_compte",
    color: "#E4405F"
  },
  { 
    name: "LinkedIn", 
    username: "Victor Landwerlin", 
    icon: "linkedin", 
    url: "https://linkedin.com/in/votre_profil",
    color: "#0A66C2"
  },
  { 
    name: "Behance", 
    username: "votre_profil", 
    icon: "behance", 
    url: "https://behance.net/votre_profil",
    color: "#1769FF"
  },
  { 
    name: "X", 
    username: "@votre_compte", 
    icon: "x", 
    url: "https://x.com/votre_compte",
    color: "#000000"
  },
];
---

<Layout title="Contact" currentPath="/contact">
  <!-- Titre de la page -->
  <section class="py-12 relative overflow-hidden">
    <div class="absolute inset-0 opacity-5 pointer-events-none">
      <Logo size="xlarge" className="absolute -top-32 right-10 w-[500px] h-[500px] rotate-12" />
    </div>
    
    <div class="container mx-auto max-w-6xl relative z-10">
      <h1 class="text-8xl md:text-9xl font-bold text-kivik-green text-center mb-4">
        Contact
      </h1>
      <div class="w-32 h-1 bg-kivik-green mx-auto"></div>
      <p class="text-center text-xl text-kivik-green/70 mt-6">
        Une idée ? Un projet ? Discutons-en !
      </p>
    </div>
  </section>

  <!-- Réseaux sociaux -->
  <section class="py-16 px-6 relative">
    <div class="absolute left-0 top-1/2 -translate-y-1/2 opacity-5 pointer-events-none">
      <Logo size="xlarge" className="w-[400px] h-[400px] -rotate-12" />
    </div>

    <div class="container mx-auto max-w-3xl relative z-10">
      <h2 class="text-4xl font-bold text-kivik-green mb-12 text-center">Suivez-moi</h2>
      
      <div class="grid md:grid-cols-2 gap-6">
        {socialLinks.map((social) => (
          <a 
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            class="group flex items-center gap-6 p-6 bg-white border-4 border-kivik-green hover:shadow-2xl transition-all hover:-translate-y-2"
          >
            <div class="w-20 h-20 bg-kivik-green rounded-full flex items-center justify-center group-hover:scale-110 transition-transform shrink-0">
              {social.icon === "instagram" && (
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === "linkedin" && (
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === "behance" && (
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22 7h-7v-2h7v2zm1.726 10c-.442 1.297-2.029 3-5.101 3-3.074 0-5.564-1.729-5.564-5.675 0-3.91 2.325-5.92 5.466-5.92 3.082 0 4.964 1.782 5.375 4.426.078.506.109 1.188.095 2.14h-8.027c.13 3.211 3.483 3.312 4.588 2.029h3.168zm-7.686-4h4.965c-.105-1.547-1.136-2.219-2.477-2.219-1.466 0-2.277.768-2.488 2.219zm-9.574 6.988h-6.466v-14.967h6.953c5.476.081 5.58 5.444 2.72 6.906 3.461 1.26 3.577 8.061-3.207 8.061zm-3.466-8.988h3.584c2.508 0 2.906-3-.312-3h-3.272v3zm3.391 3h-3.391v3.016h3.341c3.055 0 2.868-3.016.05-3.016z"/>
                </svg>
              )}
              {social.icon === "x" && (
                <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
              )}
            </div>
            <div class="text-left">
              <div class="text-sm text-kivik-green/60 font-medium mb-1">{social.name}</div>
              <div class="text-xl font-bold text-kivik-green">{social.username}</div>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Séparateur OU -->
  <div class="py-16 px-6">
    <div class="container mx-auto max-w-3xl">
      <div class="relative">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t-2 border-kivik-green/30"></div>
        </div>
        <div class="relative flex justify-center">
          <span class="bg-kivik-cream px-8 text-3xl font-bold text-kivik-green">OU</span>
        </div>
      </div>
    </div>
  </div>

  <!-- Formulaire de contact -->
  <section class="py-16 px-6 pb-24 relative overflow-hidden">
    <div class="absolute right-0 bottom-0 opacity-5 pointer-events-none">
      <Logo size="xlarge" className="w-[500px] h-[500px] rotate-45" />
    </div>

    <div class="container mx-auto max-w-3xl relative z-10">
      <h2 class="text-4xl font-bold text-kivik-green mb-4 text-center">Contactez-moi directement</h2>
      <p class="text-center text-kivik-green/70 mb-12">Remplissez le formulaire ci-dessous</p>
      
      <div class="bg-white border-4 border-kivik-green p-8 md:p-12 relative">
        <!-- Petit logo décoratif dans le coin -->
        <div class="absolute -top-6 -right-6 opacity-20">
          <Logo size="medium" />
        </div>

        <!-- Formulaire avec mailto -->
        <form 
          action="mailto:landwerlinvictor4@gmail.com"
          method="post"
          enctype="text/plain"
          class="space-y-8"
        >
          <!-- Nom -->
          <div class="relative">
            <label for="nom" class="block text-lg font-bold text-kivik-green mb-3">
              Votre nom
            </label>
            <input 
              type="text" 
              id="nom" 
              name="nom"
              placeholder="Jean Dupont"
              class="w-full px-6 py-4 border-2 border-kivik-green/30 rounded-full focus:border-kivik-green focus:outline-none bg-kivik-cream text-kivik-green placeholder-kivik-green/40 transition-all"
              required
            />
          </div>

          <!-- Email -->
          <div class="relative">
            <label for="email" class="block text-lg font-bold text-kivik-green mb-3">
              Votre email
            </label>
            <input 
              type="email" 
              id="email" 
              name="email"
              placeholder="jean.dupont@example.com"
              class="w-full px-6 py-4 border-2 border-kivik-green/30 rounded-full focus:border-kivik-green focus:outline-none bg-kivik-cream text-kivik-green placeholder-kivik-green/40 transition-all"
              required
            />
          </div>

          <!-- Message -->
          <div class="relative">
            <label for="message" class="block text-lg font-bold text-kivik-green mb-3">
              Votre message
            </label>
            <textarea 
              id="message" 
              name="message"
              rows="6"
              placeholder="Décrivez votre projet ou posez vos questions..."
              class="w-full px-6 py-4 border-2 border-kivik-green/30 rounded-3xl focus:border-kivik-green focus:outline-none bg-kivik-cream text-kivik-green placeholder-kivik-green/40 resize-none transition-all"
              required
            ></textarea>
          </div>

          <!-- Bouton submit -->
          <div class="flex justify-end">
            <button 
              type="submit"
              class="group px-10 py-4 bg-kivik-green text-white text-lg font-medium hover:bg-kivik-green/90 transition-all hover:scale-105 flex items-center gap-3"
            >
              Envoyer le message
              <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"/>
              </svg>
            </button>
          </div>
        </form>
      </div>

      <!-- Infos de contact direct -->
      <div class="mt-12 text-center space-y-4">
        <p class="text-kivik-green/70">Vous préférez un contact direct ?</p>
        <div class="flex flex-wrap justify-center gap-6">
          <a href="mailto:landwerlinvictor4@gmail.com" class="flex items-center gap-2 text-kivik-green font-medium hover:text-kivik-green/70 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            landwerlinvictor4@gmail.com
          </a>
          <a href="tel:0762792324" class="flex items-center gap-2 text-kivik-green font-medium hover:text-kivik-green/70 transition-colors">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            07 62 79 23 24
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>